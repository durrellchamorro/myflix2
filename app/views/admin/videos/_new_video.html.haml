%section.admin_add_video
  .container
    .row
      .col-sm-10.col-sm-offset-1
        %ul.nav.nav-tabs
          %li.col-xs-6
            = link_to "Recent Payments", admin_payments_path
          %li.active.col-xs-6
            %a(href="") New Video
    %br
    .row
      .col-xs-12
        = bootstrap_form_for [:admin, video], layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-6", data: "upload-form" do |f|
          %fieldset
            .form-group
              = f.text_field :title
            .form-group
              = f.select :category_id, options_for_select(Category.all.map { |category| [category.name, category.id] }), class: "col-sm-2"
            .form-group
              = f.text_field :token, label: "Youtube Token"
            .form-group
              = f.text_area :description, rows: 8
            .form-group
              = f.file_field :image, name: "photo[image]"
            .form-group
              = f.submit value: "Add Video", class: "btn btn-primary col-sm-offset-3 submit_button"
    .row.row-centered
      .video.col-xs-6.col-sm-3.col-md-2.col-centered
        .custom_thumb
