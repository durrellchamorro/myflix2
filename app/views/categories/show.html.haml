%section.genre
  %header.clearfix
    %h3= @category.name.pluralize(@category.videos.size)
  %article.row
    - @videos.sort_by(&:title).each do |video|
      .video.col-xs-6.col-sm-3.col-md-2
        .custom_thumb
          = link_to video_path(video) do
            = image_tag video.photos.first.try(:image_url, public: true)
.row
  = paginate @videos
