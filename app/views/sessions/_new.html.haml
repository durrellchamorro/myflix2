%section.sign_in
  .row
    %header.text-center
      %h1 Sign in
    .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
      = form_tag sessions_path, class: 'sign_in' do
        %fieldset
          .form-group
            = label_tag :email, 'Email Address'
            = email_field_tag 'email', nil, class: 'form-control'
            = label_tag :password, 'Password'
            = password_field_tag 'password', nil, class: 'form-control'
        %fieldset.form-group.action
          = submit_tag 'Sign In', class: 'btn btn-primary', data: { disable_with: 'loading...' }
          = link_to "Forgot Password?", forgot_password_path
