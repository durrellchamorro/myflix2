%section.video_index
  - @categories.each do |category|
    %article.video_category
      %header
        %h3= link_to category.name, category
      .videos.row
        - category.recent_videos.each do |video|
          .video.col-xs-6.col-sm-3.col-md-2
            .custom_thumb
              = link_to(video_path(video.slug)) do
                = image_tag video.photos.first.try(:image_url, public: true)
.row
  = paginate @categories
