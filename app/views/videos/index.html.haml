- @categories.each do |category|
  %article.video_category
    %header
      %h3= link_to category.name
    .videos.row
      - category.videos.each do |video|
        .video.col-sm-2
          .custom_thumb
            = link_to(video_path(video.id)) do
              = image_tag(video.small_cover_url)
